@model IEnumerable<ShauliProject.Models.ApplicationUser>

@{
    ViewBag.Title = "Management";
}

@foreach (var item in Model)
{
    foreach (var post in item.Posts)
    {
        <section id="post_section">
            <h2>Manage Posts</h2>
            <table class="table">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Title
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.TextBox("Title", post.Title)
                    </td>
                    <td>
                        @Html.TextBox("Name", item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = post.PostId }) |
                        @Html.ActionLink("Details", "Details", new { id = post.PostId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = post.PostId }) |
                        @Html.ActionLink("Comments", "CommentDetails", new { id = post.PostId })
                    </td>
                </tr>
                }
                }

            </table>
        </section>
    }
}
