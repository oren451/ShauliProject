@model IEnumerable<ShauliProject.Models.Post>

@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Create New", "Create")

@foreach (var item in Model)
{
<section>
    <article class="blogPost">
        <header>
            <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
            <p>Posted on <time datetime="2009-06-29T23:31+01:00">@Html.DisplayFor(modelItem => item.PublishDate)</time> by <a href="#">@Html.DisplayFor(modelItem => item.AuthorName)</a> - <a href="#comments">3 comments</a>
            </p>
        </header>
        <div>
            <p>@Html.DisplayFor(modelItem => item.Content)</p>
            <img src="images/flower.png" alt="Flower"/> <!--Html.DisplayNameFor(model => model.Image)-->
            <video controls="controls">
                <source src="images/shauli.m4v" type="video/mp4"/>
                <!--Html.DisplayNameFor(model => model.Video)-->
            </video>
        </div>
    </article>
</section>
    <section id="comments">
        <h3>Comments</h3>
        <article>
            @foreach (var comment in item.Comments)
            {
                <header>
                    <a href="#">@Html.DisplayFor(modelItem => comment.CommentWriter)</a>
                </header>
                <p>@Html.DisplayFor(modelItem => comment.Content)</p>
            }
        </article>
    </section>
    <form action="#" method="post">
        <h3>Post a comment</h3>
        <p>
            <label for="name">Title</label>
            <input name="name" id="name" type="text" required />
        </p>
        <p>
            <label for="email">Comment Writer</label>
            <input name="email" id="email" type="email" required />
        </p>
        <p>
            <label for="website">CommentWriterSite</label>
            <input name="website" id="website" type="url" />
        </p>
        <p>
            <label for="comment">Comment</label>
            <textarea name="comment" id="comment" required></textarea>
        </p>
        <p>@Html.ActionLink("Add Comment", "AddComment")</p>
    </form>

 }

